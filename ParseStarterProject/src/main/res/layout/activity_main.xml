<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity"
                android:background="@mipmap/betterTrition"
    android:clickable="false"
    android:backgroundTintMode="screen">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1A237E"
        android:text="Buy"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:id="@+id/buyButton"
        android:onClick="buyPage"
        android:layout_marginBottom="46dp"
        android:layout_above="@+id/sellButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1A237E"
        android:text="Sell"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:id="@+id/sellButton"
        android:onClick="sellPage"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/buyButton"
        android:layout_alignEnd="@+id/buyButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1A237E"
        android:text="My Listings"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:id="@+id/myListingsButton"
        android:onClick="myListingsPage"
        android:textSize="12sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="110dp"
        android:layout_alignRight="@+id/sellButton"
        android:layout_alignEnd="@+id/sellButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
